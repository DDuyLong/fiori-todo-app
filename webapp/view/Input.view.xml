<mvc:View
    controllerName="fioritodoapp.controller.Input"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
>
    <Input
        class="todoInput"
        id="addTodoItemInput"
        placeholder="What needs to be done"
        change=".addTodo"
        value="{/newTodo}"
        valueLiveUpdate="true"
    />
</mvc:View>
