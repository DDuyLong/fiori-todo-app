<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
      id="deleteItemDialog"
      title ="Delete item">
       <content>
        <Label text="Do you want delete this {/deleteTodo/title} ?" class='lable-dailog'></Label>
      </content>
      <endButton>
      <Button text="Yes" press=".onDeleteItem"/>
      </endButton>
      <beginButton>
         <Button
            text="No"
            press=".onCloseDialog"/>
            
      </beginButton>
      
   </Dialog>
</core:FragmentDefinition>